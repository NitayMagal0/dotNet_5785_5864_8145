<Window x:Class="PL.Call.CallDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Call"
        mc:Ignorable="d"
        Title="Call Details" Height="720" Width="900"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Border Background="White" 
            CornerRadius="10" 
            Margin="20"
            BorderBrush="#E0E0E0"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" 
                            ShadowDepth="1" 
                            Direction="270" 
                            Color="#DDDDDD"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Call Information" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50"
                       Margin="0,0,0,20"/>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Call ID -->
                <Label Grid.Row="0" Grid.Column="0" Content="Call ID:" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="0" Grid.Column="1" 
                         Style="{StaticResource TextBoxStyle}"
                         Text="{Binding CurrentCall.CallId, Mode=TwoWay}"/>

                <!-- Call Type -->
                <Label Grid.Row="1" Grid.Column="0" Content="Call Type:" Style="{StaticResource LabelStyle}"/>
                <ComboBox Grid.Row="1" Grid.Column="1" 
                          Style="{StaticResource ComboBoxStyle}"
                          ItemsSource="{Binding CallTypes}"
                          SelectedValue="{Binding CurrentCall.CallType, Mode=TwoWay}"/>

                <!-- Opening Time -->
                <Label Grid.Row="2" Grid.Column="0" Content="Opening Time:" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="2" Grid.Column="1" 
                         Style="{StaticResource TextBoxStyle}"
                         Text="{Binding CurrentCall.OpeningTime, Mode=TwoWay}"/>

                <!-- Remaining Time -->
                <Label Grid.Row="3" Grid.Column="0" Content="Remaining Time:" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="3" Grid.Column="1" 
                         Style="{StaticResource TextBoxStyle}"
                         Text="{Binding CurrentCall.RemainingTime, Mode=TwoWay}"/>

                <!-- Last Volunteer -->
                <Label Grid.Row="4" Grid.Column="0" Content="Last Volunteer:" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="4" Grid.Column="1" 
                         Style="{StaticResource TextBoxStyle}"
                         Text="{Binding CurrentCall.LastVolunteer, Mode=TwoWay}"/>

                <!-- Total Time -->
                <Label Grid.Row="5" Grid.Column="0" Content="Total Time:" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="5" Grid.Column="1" 
                         Style="{StaticResource TextBoxStyle}"
                         Text="{Binding CurrentCall.TotalTime, Mode=TwoWay}"/>

                <!-- Status -->
                <Label Grid.Row="6" Grid.Column="0" Content="Status:" Style="{StaticResource LabelStyle}"/>
                <ComboBox Grid.Row="6" Grid.Column="1" 
                          Style="{StaticResource ComboBoxStyle}"
                          ItemsSource="{Binding StatusTypes}"
                          SelectedValue="{Binding CurrentCall.Status, Mode=TwoWay}"/>

                <!-- Assignment Count -->
                <Label Grid.Row="7" Grid.Column="0" Content="Assignment Count:" Style="{StaticResource LabelStyle}"/>
                <TextBox Grid.Row="7" Grid.Column="1" 
                         Style="{StaticResource TextBoxStyle}"
                         Text="{Binding CurrentCall.AssignmentsCount, Mode=TwoWay}"/>

                <!-- Action Button -->
               <Button Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2"
                        Margin="0,30,0,0"
                        Height="45" 
                        Width="200"
                        Content="Save Changes"
                        Click="SaveChanges_Click"
                        Background="#3498DB"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="16"
                        FontWeight="SemiBold">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980B9"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#2471A3"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button> 
            </Grid>
        </Grid>
    </Border>
</Window>
