<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="System Management" Height="850" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Background="#F0F2F5">

    <Window.Resources>
        <!-- Enhanced Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <Border.Effect>
                                <DropShadowEffect x:Name="shadowEffect" 
                                                ShadowDepth="1" 
                                                Direction="320" 
                                                Color="Gray" 
                                                Opacity="0.2" 
                                                BlurRadius="3"/>
                            </Border.Effect>
                            <ContentPresenter x:Name="content" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="border" 
                                                      Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                      To="#1565C0" 
                                                      Duration="0:0:0.1"
                                                      AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style (unchanged) -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Label Style (unchanged) -->
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#424242"/>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F8F8"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="VerticalGridLinesBrush" Value="#E0E0E0"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
        </Style>
    </Window.Resources>

    <!-- Rest of the XAML remains exactly the same -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>



        <!-- System Clock Area -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
        Background="White"
        BorderBrush="#E0E0E0" 
        BorderThickness="1" 
        CornerRadius="8"
        Padding="20" 
        Margin="0,0,0,20">

            <!-- Use Grid to overlap elements -->
            <Grid>
                <!-- Image positioned absolutely -->
                <Image Source="Images/Logo.png"
               Width="88" Height="93"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="10"/>

                <!-- StackPanel for the rest of the content -->
                <StackPanel>
                    <Label Content="{Binding CurrentTime}" 
                   FontSize="32" 
                   FontWeight="Light"
                   HorizontalAlignment="Center"
                   Foreground="#1976D2"
                   Background="Transparent"
                   Padding="10"/>

                    <StackPanel Orientation="Vertical" 
                        Margin="0,20,0,0" 
                        HorizontalAlignment="Center">
                        <Button Content="Add One Minute" Width="200" Margin="0,5" Click="btnAddOneMinute_Click"/>
                        <Button Content="Add One Hour" Width="200" Margin="0,5" Click="btnAddOneHour_Click"/>
                        <Button Content="Add One Day" Width="200" Margin="0,5" Click="btnAddOneDay_Click"/>
                        <Button Content="Add One Month" Width="200" Margin="0,5" Click="btnAddOneMonth_Click"/>
                        <Button Content="Add One Year" Width="200" Margin="0,5" Click="btnAddOneYear_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>


        <!-- Configuration Area -->
        <Border Grid.Row="1" Grid.Column="0" 
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,10,0">
            <StackPanel>
                <TextBlock Text="Configuration" 
                          FontSize="20" 
                          FontWeight="Medium" 
                          Margin="0,0,0,20"
                          Foreground="#424242"/>

                <StackPanel Orientation="Horizontal" 
                          VerticalAlignment="Center" 
                          Margin="0,10">
                    <Label Content="Max Range:" VerticalAlignment="Center" />
                    <TextBox Text="{Binding MaxRange, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Width="80" 
                             Margin="10,0" 
                             x:Name="txtMaxRange"/>
                    <Button Content="Update" 
                           Width="100" 
                           Click="btnUpdateMaxRange_Click"/>
                </StackPanel>

                <TextBlock Text="[Range for risky tasks]" 
                          TextWrapping="Wrap" 
                          Foreground="#9C27B0"
                          FontStyle="Italic"
                          Margin="0,10"/>
            </StackPanel>
        </Border>

        <!-- Database Controls -->
        <Border Grid.Row="1" Grid.Column="1"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="10,0,0,0">
            <StackPanel>
                <TextBlock Text="Database Management" 
                          FontSize="20" 
                          FontWeight="Medium" 
                          Margin="0,0,0,20"
                          Foreground="#424242"/>

                <Button Content="Reset DB" 
                        Width="150"
                        Margin="0,5"
                        Background="#F44336"
                        Click="btnResetDB_Click"/>

                <Button Content="Init DB" 
                        Width="150"
                        Margin="0,5"
                        Background="#4CAF50"
                        Click="btnInitializeDB_Click"/>
            </StackPanel>
        </Border>

        <!-- Simulator Controls -->
        <Border Grid.Row="2" Grid.Column="1"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="10,20,0,0"
                Height="230">

            <TextBlock Text="Simulator Controls" 
            FontSize="20" 
            FontWeight="Medium" 
            Margin="0,0,0,20"
            Foreground="#424242"/>
        </Border>

        <!-- Calls Amounts -->
        <Border Grid.Row="2" Grid.Column="0"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,20,10,0"
                Height="230">
            <Grid>
                <TextBlock Text="Call Amount By Status" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Top" 
                           FontSize="20"
                           FontWeight="Medium"
                           Foreground="#424242"
                           Margin="10,0,0,0"/>
                <DataGrid ItemsSource="{Binding CallStatusCounts}" AutoGenerateColumns="False" 
          Margin="14,32,25,10" 
            IsReadOnly="True"              
                          MouseDoubleClick="CallStatusDataGrid_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Call Status" Binding="{Binding CallStatus}" Width="*" />
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </Border>


        <!-- Volunteers and Calls Buttons -->
        <Border Grid.Row="3" Grid.ColumnSpan="2"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,20,0,0">
            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="40"/>
                    <!-- Space between buttons -->
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Content="Manage Volunteers" 
            Width="150" Height="30"
            Background="#673AB7"
            Grid.Column="0"
            Click="btnVolunteerList_Click"/>
                <Button Content="Manage Calls" 
            Width="150"
            Background="#673AB7"
            Grid.Column="2"
            Click="btnManageCalls_Click"/>
            </Grid>

        </Border>
    </Grid>
</Window>